<!-- je mets les cards -->
      <div class="container">
        <div class="row">
        <% @categories.each_with_index  do |category, index| %>
          <div class="card col-xs-12 col-sm-8 offset-sm-2">
            <%= link_to category_teachers_path(category), class: 'link-featurette' do %>
            <div class="card-body">
              <h5 class="card-title"><%=category.name%></h5>
              <p class="card-text">Rencontrez des personnes inspirantes, proche de chez vous</p>
            </div>
            <%= image_tag category.photo, class: "card-img-top imgcategory", alt:"Card image cap" %>
            <% end %>
          </div>
          <% end %>
        </div>
      </div>
